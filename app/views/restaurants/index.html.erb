<h1>Listing restaurants</h1>

<table class="table table-striped">
 <thead>
  <tr>
    <th>Name</th>
    <th>Food quality</th>
    <th>Service</th>
    <th>Ambience</th>
    <th></th>
  </tr>
 </thead>
  <tbody>
   <% @restaurants.each do |restaurant| %>
  <tr <% if restaurant.user.id == session[:current_user_id] %>class="success" <% end %>>
    <td><%= restaurant.name %></td>
    <td><%= restaurant.food_quality %></td>
    <td><%= restaurant.service %></td>
    <td><%= restaurant.ambience %></td>
    <td><%= link_to 'Show', restaurant, class: "btn  btn-primary" %>
    <% if can? :update, restaurant %><%= link_to 'Edit', edit_restaurant_path(restaurant), class:  "btn  btn-primary"%><% end %>
    <% if can? :destroy, restaurant %><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn  btn-danger"%></td><% end %>
  </tr>
  <% end %>
  </tbody>
</table>

<br />

<% if session[:current_user_id] %><%= link_to 'New Restaurant', new_restaurant_path, class: "btn btn-primary" %><% end %>
